<section class="categories-show">

  <header class="page-header">
    <h1>
      <%= @category.name %>
      <small>
        (<%= pluralize @products.size, 'product' %>, the overall rating for this catolog is <%= number_with_precision(CalculateRating(@category.id), precision: 2) %>)
      </small>
    </h1>
  </header>

  <div class="products">
    <%= render @products %>
  </div>

</section>
